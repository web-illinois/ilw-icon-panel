{
    "name": "@illinois-toolkit/ilw-icon-panel",
    "description": "Icon panel component for the Illinois Web Toolkit.",
    "repository": "github:web-illinois/ilw-icon-panel",
    "private": false,
    "license": "MIT",
    "version": "1.0.0-alpha2",
    "type": "module",
    "files": [
        "src/**",
        "dist/**",
        "builder/**"
    ],
    "exports": {
        ".": {
            "import": "./dist/ilw-icon-panel.js",
            "require": "./dist/ilw-icon-panel.cjs",
            "default": "./dist/ilw-icon-panel.js"
        },
        "./ilw-icon-panel.css": {
            "import": "./dist/ilw-icon-panel.css"
        }
    },
    "main": "./dist/ilw-icon-panel.js",
    "module": "./dist/ilw-icon-panel.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build --config vite.transpile.config.ts --emptyOutDir && vite build --config vite.build.config.ts --emptyOutDir",
        "preview": "vite preview",
        "prepack": "npm run build",
        "test:axe": "playwright test",
        "test:axe:github": "playwright test --config playwright.ci.config.ts",
        "test": "vitest run --browser.headless",
        "test:browser": "vitest watch --browser chromium"
    },
    "dependencies": {
        "lit": "3.1.3"
    },
    "devDependencies": {
        "@illinois-toolkit/ilw-core": "^1.0.2",
        "typescript": "^5.9.2",
        "vite": "7.1.5",
        "vite-plugin-dts": "^4.5.4",
        "@playwright/test": "^1.54.1",
        "@vitest/browser": "^3.2.4",
        "playwright": "^1.54.1",
        "prettier": "^3.6.2",
        "vitest-browser-lit": "^0.1.0"
    }
}